<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean name="computerNumberDAO" class="game.db.dao.ComputerNumberDAOImpl">
        <property name="template" ref="hibernateTemplate" />
    </bean>

    <bean name="playerDAO" class="game.db.dao.PlayerDAOImpl">
        <property name="template" ref="hibernateTemplate" />
    </bean>

    <bean name="gameDAO" class="game.db.dao.GameDAOImpl">
        <property name="template" ref="hibernateTemplate" />
    </bean>

    <bean name="playerNumberDAO" class="game.db.dao.PlayerNumberDAOImpl">
        <property name="template" ref="hibernateTemplate" />
    </bean>

    <bean name="gamePageFacade" parent="abstractTransactionProxy">
        <property name="target">
            <bean class="game.db.GamePageFacade">
                <property name="playerNumberDAO" ref="playerNumberDAO" />
                <property name="computerNumberDAO" ref="computerNumberDAO" />
                <property name="gameDAO" ref="gameDAO" />
                <property name="playerDAO" ref="playerDAO" />
            </bean>
        </property>
    </bean>

</beans>